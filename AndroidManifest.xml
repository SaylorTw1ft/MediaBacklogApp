<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="media.backlog.medb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name=".SearchActivity" android:launchMode="singleTop">
           
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" ></action>     
            </intent-filter>

            <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable" />
            
        </activity>

        <provider
            android:name="SearchSuggestionSampleProvider"
            android:authorities="com.android.cbin.SearchSuggestionSampleProvider" >
        </provider>

        <activity
            android:name=".DiscoverActivity"
            android:label="Discover" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".OrganizeActivity"
            android:label="Organize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PaneActivity" />
        </activity>
        <activity
            android:name=".PaneActivity"
            android:label="PaneActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ItemActivity"
            android:label="ItemActivity" >
        </activity>
        <activity
            android:name=".LoginScreen"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        
        <activity
            android:name=".NotificationsActivity"
            android:label="Notifications" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ShareActivity"
            android:label="Share" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>