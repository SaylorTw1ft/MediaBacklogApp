<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:contentDescription="@string/item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity">
    
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_picture"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="Default"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/item_picture"
        android:layout_width="131.25dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_name"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/item_pic"
        android:focusableInTouchMode="true" />
   
	<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:id = "@+id/scroll_bar_container"
        android:background="@color/home_color"
        android:contentDescription="Recommendations container"
        android:layout_above="@+id/home_bar"
        android:layout_alignParentLeft="true"></FrameLayout>
	<fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="media.backlog.medb.HomeBar"
        android:id="@+id/home_bar"
        android:background="@color/home_color"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/home_bar"></fragment>

	<Button
	    android:id="@+id/add_button"
	    android:textColor="#FFFFFF"
	    android:background="@layout/moive_button"
	    android:layout_width="125dp"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/item_picture"
	    android:layout_alignLeft="@+id/item_genre"
	    
	    android:text="Add" />

	<Button
	    android:id="@+id/share_button"
	    android:layout_width="125dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/add_button"
	    android:textColor="#FFFFFF"
	    android:background="@layout/moive_button"
	    android:layout_marginTop="8dp"
	    android:layout_toRightOf="@+id/recommend_text"
	    android:text="Share" />

	<TextView
	    android:id="@+id/item_genre"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/share_button"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/share_button"
	    android:layout_marginTop="8dp"
	    android:paddingLeft="5dp"
	    android:text="Medium Text"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/recommend_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/item_picture"
	    android:layout_above="@+id/scroll_bar_container"
	    android:paddingLeft="5dp"
	    android:paddingBottom="5dp"
	    android:text="Recommendations"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>