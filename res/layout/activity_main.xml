<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homePane"
    android:contentDescription="@string/home_pane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".MainActivity"
    android:clickable="false">


    <LinearLayout
        android:id="@+id/actionBar"
        android:contentDescription="@string/action_bar"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/home_color">

        <ImageButton
            android:contentDescription="@string/home_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/homeButton"
            android:src="@drawable/ic_action_search"
            android:background="@color/home_color"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/action_bar_spacing"
            android:layout_marginRight="@dimen/action_bar_spacing"
            android:clickable="true"
            android:onClick="homeButton" />

        <ImageButton
            android:contentDescription="@string/organize_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/organizeButton"
            android:src="@drawable/ic_action_select_all"
            android:background="@color/home_color"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/action_bar_spacing"
            android:layout_marginRight="@dimen/action_bar_spacing"
            android:clickable="true"
            android:onClick="organizeButton" />

        <ImageButton
            android:contentDescription="@string/discover_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/discoverButton"
            android:src="@drawable/ic_action_share"
            android:background="@color/home_color"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/action_bar_spacing"
            android:layout_marginRight="@dimen/action_bar_spacing"
            android:clickable="true"
            android:onClick="discoverButton" />

        <ImageButton
            android:contentDescription="@string/search_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/searchButton"
            android:src="@drawable/ic_action_search"
            android:background="@color/home_color"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/action_bar_spacing"
            android:layout_marginRight="@dimen/action_bar_spacing"
            android:clickable="true"
            android:onClick="searchButton" />
    </LinearLayout>

</RelativeLayout>
