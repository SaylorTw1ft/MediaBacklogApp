<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked ="true" >
        <shape>
            <gradient
                android:startColor="@color/game_color"
                android:endColor="@color/game_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/game_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:endColor="@color/fade_game_color"
                android:startColor="@color/fade_game_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/fade_game_color" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>